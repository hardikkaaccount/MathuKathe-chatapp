{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strict": true,
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": ".build",
        "sourceMap": true
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules"
    ]
}